@model FileUpload.Domain.Entities.UploadFileViewModel

<h2>Upload PDF File</h2>

<form asp-action="Insert" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="File">Select PDF File:</label>
        <input type="file" name="File" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="StartDate">Start Date:</label>
        <input type="datetime-local" name="StartDate" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="EndDate">End Date:</label>
        <input type="datetime-local" name="EndDate" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Upload</button>
</form>